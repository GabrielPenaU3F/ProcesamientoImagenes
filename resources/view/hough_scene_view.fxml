<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="342.0" prefWidth="462.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentation.controller.HoughSceneController">
   <children>
      <RadioButton fx:id="lineRadioButton" layoutX="83.0" layoutY="47.0" mnemonicParsing="false" onAction="#onLineSelection" text="Line">
         <toggleGroup>
            <ToggleGroup fx:id="houghGroup" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="circleRadioButton" layoutX="330.0" layoutY="47.0" mnemonicParsing="false" onAction="#onCircleSelection" text="Circle" toggleGroup="$houghGroup" />
      <Label layoutX="24.0" layoutY="92.0" text="Nº of angle parameters (theta)" />
      <Label layoutX="24.0" layoutY="154.0" text="Nº of distance parameters (rho)" />
      <TextField fx:id="lineThetaTextField" layoutX="83.0" layoutY="120.0" prefHeight="25.0" prefWidth="43.0" />
      <TextField fx:id="lineRhoTextField" layoutX="83.0" layoutY="180.0" prefHeight="25.0" prefWidth="43.0" />
      <Button layoutX="205.0" layoutY="291.0" mnemonicParsing="false" onAction="#onApply" text="Apply" />
      <Label layoutX="165.0" layoutY="255.0" text="Tolerance" />
      <TextField fx:id="toleranceTextField" layoutX="229.0" layoutY="251.0" prefHeight="25.0" prefWidth="51.0" />
   </children>
</AnchorPane>
