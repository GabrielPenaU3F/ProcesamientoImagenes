      <TextField fx:id="toleranceTextField" layoutX="230.0" layoutY="306.0" prefHeight="25.0" prefWidth="51.0" />
      <Label layoutX="275.0" layoutY="92.0" text="Nº of x-center parameters" />
      <Label layoutX="275.0" layoutY="154.0" text="Nº of y-center parameters" />
      <Label layoutX="275.0" layoutY="217.0" text="Nº of radius parameters" />
      <TextField fx:id="circleXCenterTextField" layoutX="323.0" layoutY="120.0" prefHeight="25.0" prefWidth="43.0" />
      <TextField fx:id="circleYCenterTextField" layoutX="323.0" layoutY="183.0" prefHeight="25.0" prefWidth="43.0" />
      <TextField fx:id="circleRadiusTextField" layoutX="321.0" layoutY="253.0" prefHeight="25.0" prefWidth="47.0" />
   </children>
</AnchorPane>
