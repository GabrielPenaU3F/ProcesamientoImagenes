<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="presentation.controller.ImageHistogramSceneController">
    <center>
        <AnchorPane prefHeight="321.0" prefWidth="959.0">
            <Pane layoutX="59.0" layoutY="19.0" prefHeight="316.0" prefWidth="875.0">
                <VBox>
                    <BarChart fx:id="barChart" layoutY="8.0" prefHeight="313.0" prefWidth="858.0"
                              barGap="0.0"
                              horizontalGridLinesVisible="false"
                              verticalGridLinesVisible="false"
                              legendVisible="false">
                        <xAxis>
                            <CategoryAxis label="GrayScale" endMargin="0.0" side="BOTTOM" startMargin="0.0"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Pixel Occurrency" side="LEFT" upperBound="0.0"/>
                        </yAxis>
                    </BarChart>
                </VBox>
            </Pane>
        </AnchorPane>
    </center>
    <top>
        <Pane prefHeight="65.0" prefWidth="959.0" BorderPane.alignment="CENTER">
            <ImageView fx:id="imageView" fitHeight="39.0" fitWidth="765.0" layoutX="136.0" layoutY="13.0"
                       pickOnBounds="true" preserveRatio="true"/>
        </Pane>
    </top>
</BorderPane>
